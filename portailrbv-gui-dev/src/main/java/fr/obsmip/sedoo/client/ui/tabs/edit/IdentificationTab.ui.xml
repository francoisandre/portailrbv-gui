<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:fr.obsmip.sedoo.client.ui.table"
	xmlns:l="urn:import:fr.obsmip.sedoo.client.ui.misc">
	<ui:style>
		.paragraph {
			padding-left:10px;
			padding-top :10px;
		}
		
		.leftColumn {
			
			padding-top :10px;
			padding-left:10px;
			font-weight: bold;
			background-color: #E8E8E8 ;
		}
		
		.table
		{
	 		width:95%; 
	 		margin:10px; 
	 		background:white; 
	 		border-collapse:collapse; 
	 		font-size:0.8em;
	 		background-color: #E8E8E8 ;
		}
		
		.row
		{
			border-bottom: 2px solid white;
		}
		
		.libelle {
		}
		
		.scrollable {
			overflow: scroll;
		}
		
		@external .gwt-TabLayoutPanel .gwt-TabLayoutPanelContent;
		@external .cellTableKeyboardSelectedRow;
		@external .cellTableKeyboardSelectedRowCell;
		
 
 .cellTableKeyboardSelectedRow {
	background: #fff;
}

.cellTableKeyboardSelectedRowCell {
}
 
.gwt-TabLayoutPanel .gwt-TabLayoutPanelContent
{
overflow: auto;     
}
		
	</ui:style>
	
	<ui:with field='messageBundle'
    type='fr.obsmip.sedoo.client.message.Message' /> 
    
    <ui:with field='bundle'
    type='fr.obsmip.sedoo.client.GlobalBundle' /> 
	<g:HTMLPanel styleName="{style.scrollable}">
	<div styleName="{style.scrollable}">
    <table class='{style.table}'>
    <col width="20%" />
  <col width="80%" />
    <tbody class="tableBody">
    	<tr class='{style.row}'><td class='{style.leftColumn}'><span class='{style.libelle}'><g:Label text="{messageBundle.metadataEditingResourceTitle}" /></span></td><td><g:TextBox ui:field='resourceTitle' visibleLength="80"/><l:Tooltip>Ceci est un <b> test de tooltip ! </b></l:Tooltip></td></tr>
    	<tr class='{style.row}'><td class='{style.leftColumn}'><span class='{style.libelle}'><g:Label text="{messageBundle.metadataEditingResourceAbstract}" /></span></td><td><g:TextArea ui:field="resourceAbstract" width="80%"  visibleLines="5" /></td></tr>
    	<tr class='{style.row}'><td class='{style.leftColumn}'><span class='{style.libelle}'><g:Label text="{messageBundle.metadataEditingResourceURL}" /></span></td><td><t:URLTable ui:field="resourceURLTable" /></td></tr>
    	<tr class='{style.row}'><td class='{style.leftColumn}'><span class='{style.libelle}'><g:Label text="{messageBundle.metadataEditingResourceIdentifier}" /></span></td><td><t:StringTable ui:field="resourceIdentifiantTable" addItemText="{messageBundle.metadataEditingResourceIdentifierAddItemText}" watermark="{messageBundle.metadataEditingResourceIdentifierWaterMark}" askDeletionConfirmation="false" /></td></tr>
    </tbody>
    </table>
    </div>
	</g:HTMLPanel>
</ui:UiBinder> 