<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
	 <table>
    <col width="30%" />
  <col width="70%" />
    <tbody class="tableBody">
    	<tr><td ><span >Name: </span></td><td align="left"><g:TextBox ui:field='name' visibleLength="80"/></td></tr>
    	<tr><td ><span >Description: </span></td><td align="left" ><g:TextArea ui:field='observation' visibleLines="3" width="40EM" /></td></tr>
   		<tr><td align="center" colspan="2"><g:Button text="Cancel" ui:field="cancelButton"></g:Button>&nbsp;<g:Button text="Save" ui:field="saveButton"></g:Button></td></tr>
    </tbody>
    
    </table>
   
	</g:HTMLPanel>
</ui:UiBinder> 